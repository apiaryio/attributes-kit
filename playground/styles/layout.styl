*
  -moz-box-sizing border-box
  -webkit-box-sizing border-box
  -webkit-font-smoothing antialiased
  box-sizing border-box
  margin 0
  padding 0

a
  &:visited
    color inherit

.header
  display flex
  justify-content space-around
  color #626c7e
  font-family "Source Code Pro"
  font-size 10px
  font-weight 500
  line-height 13px
  text-transform uppercase

  a
    text-decoration none

  .leftSide
  .rightSide
    width 100%
    display flex

    span
      padding-top 20px
      padding-bottom 20px
      padding-left 20px
      padding-right 20px

  .leftSide
    justify-content flex-start

    a
      .clicked, &:hover
        color #5dccae
        font-weight bold

  .headerTitle
    color white
    background-color #5dccae
    letter-spacing 2px

  .rightSide
    justify-content flex-end

    span
      &:last-child
        margin-right 20px

.body
  box-shadow 0px 2px 14px 0px rgba(51,67,88,0.10)

.playgroundContainer
  display flex
  justify-content space-between

  .column
    width 100%

.examplesContainer
  display flex
  justify-content space-between
  flex-direction column

  .column
    width 33%
    float left

.ico
  &:before
    content ''
    display block
    width 17px
    height 17px
    float left
    margin-right 6px

.gitHubIco
  @extend .ico
  &:before
    background: url('icon-github.svg') no-repeat

.documentationIco
  @extend .ico
  &:before
    background: url('icon-documentation.svg') no-repeat
